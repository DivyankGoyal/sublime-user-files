ll kth_bits_till_n(ll n, ll k)
{
    ll x = (n + 1) / ((ll)1 << k) * ((ll)1 << (k - 1)) + max(0ll, ((n + 1) % ((ll)1 << k)) - ((ll)1 << (k - 1)));
    return x;
}]]></content>
